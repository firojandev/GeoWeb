@model List<GeoService.models.UserModel>;

@{
    ViewData["Title"] = "Users List";
}
<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Device Id</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Valid Till</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.id</th>
                <td>@user.fullname</td>
                <td>@user.device_id</td>
                <td>@user.email</td>
                <td>@user.phone</td>
                <td>@user.valid_till</td>
                <td>
                    <a asp-controller="Home" asp-action="Index" asp-route-Id="@user.id" class="btn btn-primary">
                        QR Code
                    </a>
                    <a asp-controller="Message" asp-action="Create" asp-route-Id="@user.id" asp-route-fullname="@user.fullname" asp-route-deviceId="@user.device_id" class="btn btn-success">
                        Send Message
                    </a>
                </td>
            </tr>

        }

    </tbody>
</table>
