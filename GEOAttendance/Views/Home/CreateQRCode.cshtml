@model QRCodeModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">QR Code</h1>

</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="CreateQRCode">
            <input type="hidden" value="@Model.UserId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QRCodeText" class="control-label"></label>
                <input asp-for="QRCodeText" class="form-control" />
                <span asp-validation-for="QRCodeText" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Generate QR Code" class="btn btn-primary text-center" />
            </div>
            <div class="form-group">
                <img src="@Model.QrCodeUri" class="img-thumbnail" />
            </div>
        </form>
    </div>
</div>


